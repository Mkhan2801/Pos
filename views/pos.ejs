<link rel="stylesheet" href="public\css\home.css">
<div class="sidenav text-bg-dark " style="height: 100%">
  <div class="d-flex flex-column  flex-shrink-0 p-3 " style="width: 280px; height: 94vh">
    <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">

      <span class="fs-4">Comp. Info</span>
    </a>
  

      <div class="input-group col-8">
        
        <button class="input-group-text btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown"
          aria-expanded="false">
          Name
        </button>
        <input type="text" class="form-control rounded-end " placeholder="Search.." id="name" onkeyup="filterFunction()">
        <ul class="dropdown-menu">
        </ul>
   

    </div>
    <div class="col">
      <h4 class="d-flex justify-content-between align-items-center mb-3 mt-3">
        <span class="text-primary">Your cart</span>
        <span class="badge bg-primary rounded-pill" id="count">0</span>
      </h4>
      <ul class="list-group mb-3 text-bg-dark" id="rec">

      </ul>


    </div>
    <h4 class="mb-3">Payment</h4>
    <div class="d-flex" id="paymentMethod">
      <div class="form-check form-check-inline col-3">
        <input class="form-check-input" type="radio" name="payBy" id="cash" value="cash">
        <label class="form-check-label" for="cash">Cash</label>
      </div>
      <div class="form-check form-check-inline col-3">
        <input class="form-check-input" type="radio" name="payBy" id="paytm" value="paytm">
        <label class="form-check-label" for="paytm">Paytm</label>
      </div>
      <div class="form-check form-check-inline col-3">
        <input class="form-check-input" type="radio" name="payBy" id="credit" value="credit" checked>
        <label class="form-check-label" for="credit">Credit</label>
      </div>
    </div>
    <div class="d-flex  justify-content-center py-5">
      <div class="d-grid  col-12">
        <button type="button" class="btn btn-outline-light" id="chackout">Chackout</button>
      </div>
    </div>
  </div>
</div>



<div class="main">
  <div class="container mt-5 text-centerd-flex flex-wrap">
    <div class=" d-flex flex-wrap" id="itemBox">

    </div>
  </div>
</div>

